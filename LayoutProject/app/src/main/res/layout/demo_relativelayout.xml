<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
            android:text="上"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@+id/button4"/>
    <Button
            android:text="左"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:id="@+id/button5"
            android:layout_marginBottom="45dp"
            android:layout_marginTop="45dp"/>
    <Button
            android:text="下"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/button6"/>
    <Button
            android:text="右"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:id="@+id/button7"
            android:layout_marginBottom="45dp"
            android:layout_marginTop="45dp"/>
    <Button
            android:text="5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    <Button
            android:text="8"
            android:layout_width="40dp"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_above="@+id/button8" android:id="@+id/button9"/>
    <Button
            android:text="6"
            android:layout_width="40dp"
            android:layout_height="wrap_content" android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/button8" android:id="@+id/button10"/>
    <Button
            android:text="2"
            android:layout_width="40dp"
            android:layout_height="wrap_content" android:layout_below="@+id/button8" android:id="@+id/button11"
            android:layout_alignStart="@+id/button9"/>
    <Button
            android:text="4"
            android:layout_width="40dp"
            android:layout_height="wrap_content" android:layout_alignTop="@+id/button8" android:id="@+id/button12"
            android:layout_toStartOf="@+id/button8"/>
    <Button
            android:text="7"
            android:layout_width="40dp"
            android:layout_height="wrap_content" android:layout_alignTop="@+id/button9" android:id="@+id/button13"
            android:layout_toStartOf="@+id/button8"/>
    <Button
            android:text="9"
            android:layout_width="40dp"
            android:layout_height="wrap_content" android:layout_above="@+id/button8"
            android:layout_toEndOf="@+id/button8" android:id="@+id/button14"/>
    <Button
            android:text="1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button11"
            android:id="@+id/button15"
            android:layout_toStartOf="@+id/button8"/>
    <Button
            android:text="3"
            android:layout_width="40dp"
            android:layout_height="wrap_content" android:layout_below="@+id/button8"
            android:layout_toEndOf="@+id/button8" android:id="@+id/button16"/>
</RelativeLayout>
