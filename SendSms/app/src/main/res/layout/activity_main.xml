<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:text="phone:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="30dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:id="@+id/textView" android:layout_marginTop="55dp" android:layout_marginLeft="30dp"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" android:layout_marginEnd="43dp" android:id="@+id/et_phone"
            android:layout_marginTop="40dp" android:layout_marginRight="43dp" android:singleLine="false"
            android:hint="请输入电话号码"/>
    <TextView
            android:text="content:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:id="@+id/textView2"
            android:layout_marginTop="152dp" android:layout_alignStart="@+id/textView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/et_content" android:layout_alignStart="@+id/et_phone"
            android:layout_alignBaseline="@+id/textView2" android:hint="请输入内容"/>
    <Button
            android:text="发送短信"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/et_phone" android:id="@+id/bt_click"/>
</RelativeLayout>
